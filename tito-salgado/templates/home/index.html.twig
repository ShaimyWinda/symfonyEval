{% extends 'parent.html.twig' %}

{% block content %}
    <div class="col-12 text-center">
    <br>
        <h3>Tito Salgado | Artiste multi-disciplinaire</h3>
        <br>
    </div>

<div id="carouselExampleIndicators" class="carousel slide carousel-center" data-ride="carousel" data-interval="3000">
  <div class="carousel-inner">
   {% for oeuvre in oeuvres %}
    <div class="carousel-item {% if loop.index == 1 %} active {% endif %}">
      <img class="d-block img-fluid" src="{{ asset('img/'~ oeuvre.image) }}" >
      <div id="text-carousel">
        <h4>{{ oeuvre.name }}</h4>
        <p><i>"{{ oeuvre.description }}"</i></p>
      </div>
    </div>
    {% endfor %}
  </div>

  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
{% endblock %}