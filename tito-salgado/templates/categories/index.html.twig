        <div class="col-4 space-img">
        <a href="{{ url('categories.details', { 'id': sculpture.id }) }}"><img class="d-block img-fluid w-100" src="{{ asset('img/'~ sculpture.image) }}" ></a>
        </div>
    {% endfor %}
    <div class="col-12">
        <h5>Dessins</h5>
        <hr>
    </div>
    {% for dessin in dessins %}
        <div class="col-4 space-img">
        <a href="{{ url('categories.details', { 'id': dessin.id }) }}"><img class="d-block img-fluid w-100" src="{{ asset('img/'~ dessin.image) }}" ></a>
        </div>
    {% endfor %}
{% endblock %}