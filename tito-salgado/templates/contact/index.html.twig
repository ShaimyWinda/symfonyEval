{% extends 'parent.html.twig' %}

{% block content %}
    <div class="col-12 text-center">
    <br>
        <h3>Contact</h3>
        <br>
        {% for notice in app.flashes('notice') %}
            <p class="alert alert-success">
                {{ notice }}
            </p>
        {% endfor %}
        
        {{ form_start(form, { attr : { novalidate: 'novalidate'}}) }}
        <div class="form-group">
        {{ form_label(form.firstname, 'Prénom') }}
        {{ form_widget(form.firstname, { attr : { placeholder: 'Saisissez votre prénom', class: 'form-control'}}) }}
        </div>
        <div class="form-group">
        {{ form_label(form.lastname, 'Nom') }}
        {{ form_widget(form.lastname, { attr : { placeholder: 'Saisissez votre nom', class: 'form-control'}}) }}
        </div>
        <div class="form-group">
        {{ form_label(form.email, 'Email') }}
        {{ form_widget(form.email, { attr : { placeholder: 'Saisissez votre email', class: 'form-control'}}) }}
        </div>
        <div class="form-group">
        {{ form_label(form.message, 'Message') }}
        {{ form_widget(form.message, { attr : { placeholder: 'Saisissez votre message', class: 'form-control'}}) }}
        </div>
        <input type="submit" value="Valider" class="btn btn-primary">
        {{ form_end(form) }}
    </div>

{% endblock %}